{
  "compilerOptions": {
    // use the CommonJS module system: the outputted JavaScript will use require()
    // and module.exports
    "module": "commonjs",
    // Enables a more compatible way of importing default exports from ES Modules.
    // This is especially useful if you're using a mix of default and named exports.
    // Essentially, it allows you to use import thing from 'module-name'; even if
    // module-name doesn't have a default export.
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    // "ESNext" means it will compile down to the latest supported version of JavaScript
    "target": "ESNext",
    // This dictates how module imports are resolved. "node" resolution, which mimics
    // Node.js's strategy for locating modules (i.e., looking in node_modules
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false
  }
}
